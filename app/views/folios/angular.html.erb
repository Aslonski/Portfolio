<h1> Angular Folio Items</h1>

<a href="folios/new">"Create New"</a>
<%= link_to "Create New Item!", new_folio_path %>
<% @angular_folio_items.each do |item| %>
  <p><%= link_to item.title, folio_show_path(item)%></p>
  <p><%= item.subtitle%></p>
  <p><%= item.body%></p>
  <%= image_tag item.thumb_image if !item.thumb_image.nil?%>
  <%= link_to "Edit", edit_folio_path(item) %>
  <%= link_to 'Destroy Item', folio_path(item), method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>